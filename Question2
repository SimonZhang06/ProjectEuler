
public class Question2 {
	public static void main (String[]args) {
		int term1 = 1;
		int term2 = 2;
		int limit = 4000000;
		long answer = 0;
		
		while(term2<=limit) {
			
			if(term2 %2 == 0) {
			answer = answer + term2;
			}
			int a = term2;
			term2 = term1 + term2;
			term1 = a;
			}
		System.out.println(answer);
		}
	}
